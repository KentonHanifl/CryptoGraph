<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.mikephil.charting.charts.CandleStickChart
        android:layout_width="0dp"
        android:layout_height="255dp"
        android:id="@+id/chart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="162dp"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.139"
        android:background="@drawable/chart_back"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"></com.github.mikephil.charting.charts.CandleStickChart>

    <TextView
        android:id="@+id/chartTitle"
        android:layout_width="198dp"
        android:layout_height="35dp"
        android:text="MarketName"
        android:textSize="30sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/chart"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintVertical_bias="0.175"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <RadioGroup
        android:layout_width="358dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chart"
        app:layout_constraintVertical_bias="0.436"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="13dp">

        <RadioButton
            android:id="@+id/dayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Day"
            android:checked="true"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/hourButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hour"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/thirtyMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thirty Minutes"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <TableLayout
        android:layout_width="381dp"
        android:layout_height="91dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/chartTitle"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/chart">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/O"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="O:"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/C"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="C:"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/V"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="V:"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/open"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/close"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/volume"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/H"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="H:"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/L"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="L:"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/T"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Time:"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/high"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/low"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/time"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textAlignment="center" />
        </TableRow>
    </TableLayout>
